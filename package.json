{
  "name": "catalystengine",
  "version": "0.0.1",
  "description": "Catalyst Engine",
  "repository": {
    "url": "git+https://github.com/johnsonchandra/catalystengine.git",
    "type": "git"
  },
  "author": "Johnson Chandra <johnson.chandra@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "meteor --settings settings-development.json",
    "dev-with-ip": "ROOT_URL=http://192.168.100.100:3000 meteor --settings settings-development.json",
    "staging": "DEPLOY_HOSTNAME=us-east-1.galaxy-deploy.meteor.com meteor deploy staging.labkulit.com --settings settings-staging.json --owner bagiilmu",
    "test": "meteor test --once --driver-package meteortesting:mocha",
    "test-app": "meteor test --full-app --driver-package meteortesting:mocha --settings settings-development.json",
    "visualize": "meteor --settings settings-development.json --production --extra-packages bundle-visualizer",
    "lint": "eslint .",
    "lint:all": "eslint --fix .",
    "lint:file": "eslint --fix",
    "jest": "jest",
    "jest-watch": "jest --watch --verbose false",
    "testcafe-e2e": "testcafe chrome:headless apps/**/*.e2e.js"
  },
  "dependencies": {
    "@babel/runtime": "^7.8.4",
    "apollo-cache-inmemory": "^1.6.6",
    "apollo-client": "^2.6.10",
    "apollo-link": "^1.2.14",
    "apollo-link-error": "^1.1.13",
    "apollo-link-http": "^1.5.17",
    "apollo-server-express": "^2.15.0",
    "b64-to-blob": "^1.2.19",
    "babel-plugin-lodash": "^3.3.4",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "core-js": "^3.6.5",
    "faker": "^4.1.0",
    "file-saver": "^2.0.2",
    "fontawesome": "^5.6.3",
    "graphql": "^14.6.0",
    "graphql-tag": "^2.10.3",
    "graphql-tools": "^4.0.8",
    "handlebars": "^4.7.6",
    "http-proxy": "^1.18.1",
    "isomorphic-fetch": "^2.2.1",
    "jquery": "^3.5.1",
    "jquery-validation": "^1.19.2",
    "jszip": "^3.5.0",
    "juice": "^5.2.0",
    "lodash": "^4.17.15",
    "meteor-node-stubs": "^1.0.0",
    "moment": "^2.26.0",
    "moment-timezone": "^0.5.31",
    "polished": "^3.6.5",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-apollo": "^2.5.8",
    "react-autobind": "^1.0.6",
    "react-bootstrap": "^0.32.4",
    "react-dom": "^16.13.1",
    "react-helmet": "^5.2.1",
    "react-loadable": "^5.5.0",
    "react-markdown": "^4.3.1",
    "react-router": "^5.2.0",
    "react-router-bootstrap": "^0.25.0",
    "react-router-dom": "^5.2.0",
    "react-select": "^2.4.2",
    "sanitize-html": "^1.27.0",
    "styled-components": "^4.4.1",
    "url-pattern": "^1.0.3",
    "xml": "^1.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-react": "^7.10.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^25.5.1",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-meteor": "^0.4.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jest": "^22.21.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-meteor": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-testcafe": "^0.2.1",
    "husky": "^3.1.0",
    "jest": "^25.5.4",
    "jest-cli": "^25.5.4",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "testcafe": "^1.8.6"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "babel",
      "jest",
      "meteor",
      "prettier",
      "react",
      "testcafe"
    ],
    "extends": [
      "airbnb",
      "plugin:prettier/recommended",
      "plugin:meteor/recommended",
      "plugin:react/recommended",
      "plugin:testcafe/recommended",
      "plugin:jest/recommended"
    ],
    "env": {
      "browser": true
    },
    "globals": {
      "expect": false
    },
    "rules": {
      "arrow-parens": [
        2,
        "always"
      ],
      "import/no-unresolved": 0,
      "import/no-extraneous-dependencies": 0,
      "import/extensions": 0,
      "indent": 0,
      "jsx-a11y/anchor-is-valid": [
        "error",
        {
          "components": [
            "Link"
          ],
          "specialLink": [
            "to"
          ]
        }
      ],
      "max-len": 0,
      "no-alert": 0,
      "no-console": 0,
      "no-restricted-globals": 0,
      "no-return-assign": [
        "error",
        "except-parens"
      ],
      "no-underscore-dangle": [
        "error",
        {
          "allow": [
            "_id",
            "_ensureIndex",
            "_verifyEmailToken",
            "_resetPasswordToken",
            "_name"
          ]
        }
      ],
      "class-methods-use-this": 0,
      "prettier/prettier": 2,
      "react/jsx-filename-extension": 0,
      "react/forbid-prop-types": 0
    },
    "settings": {
      "import/resolver": "meteor"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "./.githooks/pre-commit.sh",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "always",
    "rangeStart": 0,
    "parser": "babel",
    "proseWrap": "preserve"
  },
  "meteor": {
    "mainModule": {
      "client": "startup/client/index.js",
      "server": "startup/server/index.js"
    },
    "testModule": "tests/main.js"
  }
}
